{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchPackageNames": [
        "org.junit:junit-bom",
        "org.junit.jupiter:*",
        "org.mockito:*",
        "io.wcm:io.wcm.testing.*",
        "org.apache.sling:org.apache.sling.testing.*",
        "org.skyscreamer:jsonassert",
        "org.wiremock:wiremock*",
        "org.xmlunit:xmlunit-*"
      ],
      "automerge": true,
      "addLabels": ["automerge"]
    }
  ]
}
